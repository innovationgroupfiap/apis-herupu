@model Herupu.DAO.Entidades.AtividadeItem

@{
    ViewData["Title"] = "Aprendizado Atividade - Novo";
}
<h4>Novo Aprendizado Atividade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdAtividade" class="control-label"></label>
                <select asp-for="IdAtividade" class="form-control" asp-items="ViewBag.Atividades"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pergunta" class="control-label"></label>
                <input asp-for="Pergunta" class="form-control" />
                <span asp-validation-for="Pergunta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resposta" class="control-label"></label>
                <input asp-for="Resposta" class="form-control" />
                <span asp-validation-for="Resposta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detalhe" class="control-label"></label>
                <input asp-for="Detalhe" class="form-control" />
                <span asp-validation-for="Detalhe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
