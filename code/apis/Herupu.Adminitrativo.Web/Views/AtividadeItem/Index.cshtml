@model IEnumerable<Herupu.DAO.Entidades.AtividadeItem>

@{
    ViewData["Title"] = "Aprendizado Atividade - Listar";
}

<p>
    <a asp-action="Create">Nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Atividade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pergunta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resposta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalhe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Atividade.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pergunta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resposta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detalhe)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAtividadeItem">Alterar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdAtividadeItem">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdAtividadeItem">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
