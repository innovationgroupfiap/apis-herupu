@model Herupu.DAO.Entidades.Aluno

@{
    ViewData["Title"] = "Aluno - Novo";
}


<h4>Novo Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeResponsavel" class="control-label"></label>
                <input asp-for="NomeResponsavel" class="form-control" />
                <span asp-validation-for="NomeResponsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CpfResponsavel" class="control-label"></label>
                <input asp-for="CpfResponsavel" class="form-control" />
                <span asp-validation-for="CpfResponsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailResponsavel" class="control-label"></label>
                <input asp-for="EmailResponsavel" class="form-control" />
                <span asp-validation-for="EmailResponsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneResponsavel" class="control-label"></label>
                <input asp-for="TelefoneResponsavel" class="form-control" />
                <span asp-validation-for="TelefoneResponsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CelularResponsavel" class="control-label"></label>
                <input asp-for="CelularResponsavel" class="form-control" />
                <span asp-validation-for="CelularResponsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoEscola" class="control-label"></label>
                <input asp-for="CodigoEscola" class="form-control" />
                <span asp-validation-for="CodigoEscola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatriculaAluno" class="control-label"></label>
                <input asp-for="MatriculaAluno" class="form-control" />
                <span asp-validation-for="MatriculaAluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
